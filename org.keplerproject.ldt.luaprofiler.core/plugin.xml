<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Lua"
            id="org.keplerproject.ldt.luaprofiler.core">
      </category>
      <view
            name="Lua Profiler View"
            icon="icons/sample.gif"
            category="org.keplerproject.ldt.luaprofiler.core"
